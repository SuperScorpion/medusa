                    </descriptorRefs>
                    <archive>
                        <manifest>
                            &lt;!&ndash; 此处指定main方法入口的class &ndash;&gt;
                            <mainClass>com.jy.medusa.generator.Home.xxx</mainClass>
                        </manifest>
                    </archive>
                </configuration>
